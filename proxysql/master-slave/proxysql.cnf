admin_variables=
{
    admin_credentials="admin:admin"
    mysql_ifaces="0.0.0.0:6032"
    refresh_interval=2000
}

mysql_variables =
{
    monitor_username="proxy_monitor"
    monitor_password="YOUR_PASSWORD"
    client_connect_timeout=60000
}

mysql-hostgroups =
{
    writer_hostgroup=10
    reader_hostgroup=20
    active = 1
}

mysql_servers = (
    { address="mysql-master", port=3306, hostgroup=10, max_connections=1000, connect_timeout=60000, query_timeout=60000 },
    { address="mysql-slave", port=3306, hostgroup=20, max_connections=1000, connect_timeout=60000, query_timeout=60000 }
)

mysql_users =
(
    { username="super_usr", password="YOUR_PASSWORD", default_hostgroup=20, max_connections=1000, active=1 },
    { username="super_usr", password="YOUR_PASSWORD", default_hostgroup=10, max_connections=1000, active=1 },
)

mysql_query_rules = (
    { rule_id=1, active=1, username="super_usr", match_pattern="^SELECT.*", destination_hostgroup=20 },
    { rule_id=2, active=1, username="super_usr", match_pattern="^(INSERT|UPDATE|DELETE|CREATE|ALTER|DROP|TRUNCATE|RENAME|START|COMMIT|ROLLBACK).*", destination_hostgroup=10 },
)