# Admin variables
admin_variables=
{
    admin_credentials="admin:admin"
    mysql_ifaces="0.0.0.0:6032"
    refresh_interval=2000
}

mysql-hostgroups=
    {
        writer_hostgroup=1
        reader_hostgroup=2
        active = 1
    }

mysql_servers = (
    { address="mysql-master", port=3306, hostgroup=1, max_connections=1000, connect_timeout=100000, query_timeout=100000 },
    { address="mysql-slave1", port=3306, hostgroup=2, max_connections=1000, connect_timeout=100000, query_timeout=100000 }
)

mysql_users =
(
    { username="super_usr", password="SUPER_PASSWORD", default_hostgroup=1, max_connections=1000, active=1 },
)

mysql_query_rules = (
    { rule_id=1, active=1, match_digest="^select", destination_hostgroup=2, apply=1},
)
